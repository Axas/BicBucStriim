{% extends 'layout.twig' %}

{% block headerlinks %}
	<link rel="related" href="{{page.rot}}/opds/" type="application/atom+xml;profile=opds-catalog" title="OPDS index">
	<link rel="alternate" href="{{page.rot}}/opds/series/" type="application/atom+xml;profile=opds-catalog" title="OPDS catalog: by series">
{% endblock %}

{% block content %}
	<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6">
		{% for this_series in series %}
			{% if series.initial != "" %}
				<li data-role="list-divider"> {{ this_series.initial }}</li>
			{% else %}
				{% include "series_entry.twig" %}
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
