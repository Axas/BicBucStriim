{% extends 'layout.twig' %}

{% block headerlinks %}
    <link rel="related" href="{{page.rot}}/opds/" type="application/atom+xml;profile=opds-catalog" title="OPDS index">
    <link rel="alternate" href="{{page.rot}}/opds/tags/" type="application/atom+xml;profile=opds-catalog" title="OPDS catalog: by tags">
{% endblock %}

{% block content %}
    <div class="listview">
        {% for tag in tags %}
            {% if tag.initial != "" %}
                <li data-role="list-divider"> {{ tag.initial }}</li>
            {% else %}
                {% include "tag_entry.twig" %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
